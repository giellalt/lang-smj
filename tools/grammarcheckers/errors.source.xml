<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE errors>

<errors>

  <defaults>
    <default type="Grammar error">
      <ids>
        <re v="real-.*"/>
      </ids>
      <header>
        <title xml:lang="en">Real-word error</title>
        <title xml:lang="smj">Tjállemvihke</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="smj">Báhko "$1" gávnnu báhkogirjen, valla dán kontevstan merkaj juojddá ietjá.</description>
      </body>
    </default>

    <default type="Grammar error">
      <ids>
        <e id="default"/>
      </ids>
      <header>
        <title xml:lang="en">Grammar error</title>
        <title xml:lang="smj">Tjállemvihke</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="smj">Báhko "$1" gávnnu báhkogirjen, valla dán kontevstan merkaj juojddá ietjá.</description>
      </body>
    </default>
  </defaults>

  <error id="punct-aistton">
    <header>
      <title xml:lang="en">Wrong quotation mark?</title>
      <title xml:lang="smj">Boasstot gatjálvismærkka?</title>
      <references><ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">The quotation mark seems not to follow the North Sámi standard</description>
      <description xml:lang="smj">Gatjálvismærkka vuojnnu ij nuorttasámegielav tjuovvu</description>
    </body>
  </error>

  <error id="typo">
    <header>
      <title xml:lang="en">"$1" seems misspelled</title>
      <title xml:lang="smj">"$1" vuojnnu boasstot tjállám</title>
    </header>
    <body>
      <description xml:lang="en">The word "$1" seems to be misspelled.</description>
      <description xml:lang="smj">Báhko "$1" vuojnnu boasstot tjállám.</description>
    </body>
  </error>

  <error id="double-space-before">
    <header>
      <title xml:lang="en">Two spaces in front of "$1"</title>
      <title xml:lang="smj">Guokta gaska "$1" åvdån</title>
    </header>
    <body>
      <description xml:lang="en">There are two spaces between "$2" and "$1"</description>
      <description xml:lang="smj">Li guokta gaska "$2" ja "$1" gasskan</description>
    </body>
  </error>

  <error id="space-after-paren-beg">
    <header>
      <title xml:lang="en">Space after opening parenthesis</title>
      <title xml:lang="smj">Gasska gåroparantesa maŋŋela</title>
    </header>
    <body>
      <description xml:lang="en">There is a space after the opening parenthesis</description>
      <description xml:lang="smj">Le gasska gåroparantesa maŋŋela</description>
    </body>
  </error>

  <error id="space-before-paren-end">
    <header>
      <title xml:lang="en">Space before closing parenthesis</title>
      <title xml:lang="smj">Gasska rievtesparantesa åvdån</title>
    </header>
    <body>
      <description xml:lang="en">There is a space before the closing parenthesis</description>
      <description xml:lang="smj">Le gasska rievtesparantesa åvddåla</description>
    </body>
  </error>

  <error id="space-before-punct-mark">
    <header>
      <title xml:lang="en">Space before punctuation</title>
      <title xml:lang="smj">Gasska tjoakká åvdån</title>
    </header>
    <body>
      <description xml:lang="en">There is a space in front of the punctuation mark "$1"</description>
      <description xml:lang="smj">Le gasska tjoakká åvdån</description>
    </body>
  </error>

  <error id="no-space-after-punct-mark">
    <header>
      <title xml:lang="en">Missing space</title>
      <title xml:lang="smj">Gasska vádnun</title>
    </header>
    <body>
      <description xml:lang="en">There is no space after the punctuation mark "$1"</description>
      <description xml:lang="smj">Ij gávnnu gasska tjoakká maŋŋela</description>
    </body>
  </error>

</errors>
