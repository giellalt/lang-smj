	.o. @\"$(top_builddir)/src/filters/remove-Use_GC-strings.hfst\"           \
	.o. @\"$(top_builddir)/src/filters/remove-Use_minusGC-tags.hfst\"         \
   	.o. @\"$<\" \
    	;" \
		| $(HFST_REGEXP2FST) $(HFST_FLAGS) $(HFST_FORMAT) \
			-S --xerox-composition=ON \
		| $(HFST_INVERT) $(HFSTFLAGS) \
		-o $@

