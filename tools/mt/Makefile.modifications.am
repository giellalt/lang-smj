		@\"$(top_builddir)/src/filters/remove-area-tags.hfst\"                \
	.o. @\"$(top_builddir)/src/filters/remove-derivation-position-tags.hfst\" \
	.o. @\"$(top_builddir)/src/filters/remove-norm-comp-tags.hfst\"           \
